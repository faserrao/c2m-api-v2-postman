.PHONY: generate-openapi-spec-from-dd
generate-openapi-spec-from-dd:
	@echo "üì§ Converting the EBNF Data Dictionary to an OpenAPI YAML Specification."

	# --- Validate required files and script ---
	@if [ ! -f $(SCRIPTS_DIR)/$(EBNF_SCRIPT_SHORT) ]; then \
		echo "‚ùå Script not found: $(SCRIPTS_DIR)/$(EBNF_SCRIPT_SHORT)"; exit 1; \
	fi
	@if [ ! -f $(EBNF_FILE) ]; then \
		echo "‚ùå EBNF Data Dictionary not found: $(EBNF_FILE)"; exit 1; \
	fi

	# --- Install Python dependencies ---
	@echo "üì§ Installing required Python modules..."
	$(VENV_PIP) install -r $(SCRIPTS_DIR)/python_env/requirements.txt

	# --- Run the conversion script ---
	@echo "üì§ Running Conversion Script: $(EBNF_SCRIPT_SHORT) on $(EBNF_FILE) outputting: $(OPENAPI_SPEC)"
	$(VENV_PYTHON) $(SCRIPTS_DIR)/$(EBNF_SCRIPT_SHORT) -o $(OPENAPI_SPEC) $(EBNF_FILE) 


#============================
#         OPENAPI
# ============================

.PHONY: lint
lint:
	$(REDOCLY) lint $(SPEC)
	$(SPECTRAL) lint $(SPEC)


.PHONY: diff
diff:
	@echo "üì§ Fetching latest from origin/main‚Ä¶"
	git fetch origin
	@echo "üßæ Checking out previous version of spec for diff comparison‚Ä¶"
	git show $(MAIN_SPEC_PATH) > $(PREVIOUS_SPEC)
	@echo "üîç Running openapi-diff‚Ä¶"
	openapi-diff $(PREVIOUS_SPEC) $(SPEC) --fail-on-incompatible


.PHONY: clean-diff
clean-diff:
	rm -f $(PREVIOUS_SPEC)

